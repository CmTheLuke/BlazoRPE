@* <p>Exercise</p> *@
<div class="container">
    <div class="row">
        <div class="col-sm"><label for="ExerciseName">Exercise</label></div>
        <div class="col-sm"><input type="text" id="ExerciseName" @bind="exerciseItem.Name"></div>
    </div>

    <div class="row">
        <div class="col-sm"><label for="PrevWeight">Previous Weight</label></div>
        <div class="col-sm"><input type="text" id="PrevWeight" @bind="exerciseItem.PreviousWeight"></div>
    </div>

    <div class="row">
        <div class="col-sm"><label for="PrevReps">Previous Reps</label></div>
        <div class="col-sm"><input type="text" id="PrevReps" @bind="exerciseItem.PreviousReps"></div>
    </div>
    
    <div class="row">
        <div class="col-sm"><label for="PrevRpe">Previous Rpe</label></div>
        <div class="col-sm"><input type="text" id="PrevRpe" @bind="exerciseItem.PreviousRpe"></div>
    </div>

    <div class="row">
        <div class="col-sm"><label for="NextReps">Next Reps</label></div>
        <div class="col-sm"><input type="text" id="NextReps" @bind="exerciseItem.NextReps"></div>
    </div>

    <div class="row">
        <div class="col-sm"><label for="IncreasePct">Increase %</label></div>
        <div class="col-sm"><input type="text" id="IncreasePct" @bind="exerciseItem.IncreasePercentage"></div>
    </div>

    <div class="row">
        <div class="col-sm"><label for="RpeSixOffsetPct">RPE 6 Offset %</label></div>
        <div class="col-sm"><input type="text" id="RpeSixOffsetPct" @bind="exerciseItem.RpeSixOffsetPercentage"></div>
    </div>
</div>

<div><button class="btn btn-primary" @onclick="OnClickCalculate">Calculate</button></div>
<div><span>@exerciseItem.Name</span></div>

<Results RpeCalcResults="results" />

@code {
    private ExerciseItem exerciseItem = new ExerciseItem();
    private ResultItem results;

    private void OnClickCalculate(){
        Console.WriteLine("Calculate was clicked!");
        Console.WriteLine($"Calculating based off of {exerciseItem.PreviousWeight} x {exerciseItem.PreviousReps} @ {exerciseItem.PreviousRpe}");
        results = RpeCalculator.Calculate(exerciseItem);
    }
}
